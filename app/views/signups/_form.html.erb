<%= form_for(@signup) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :required => true, :placeholder => 'John Doe',
                            :autofocus => true %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.email_field :email, :required => true,
                              :placeholder => 'john@gmail.com' %>
  </p>
  <p>
    <%= f.label :timeslot_id, 'Choose a time slot' %><br />
    <% open_timeslots = Timeslot.open_timeslots %>
    <% if open_timeslots.empty? %>
    <p>All time slots are taken. Thank you for your interest!</p>
    <% else %>
    <%= f.select :timeslot_id, open_timeslots %>
    <% end %>
  </p>

  <div class = "uiButton">
    <%= f.submit 'Submit' %>
  </div>
<% end %>
